<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_start_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Start Service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_stop_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Stop Service"
        app:layout_constraintEnd_toEndOf="@+id/bt_start_service"
        app:layout_constraintStart_toStartOf="@+id/bt_start_service"
        app:layout_constraintTop_toBottomOf="@+id/bt_start_service" />

    <Button
        android:id="@+id/bt_bind_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bind Service"
        app:layout_constraintEnd_toEndOf="@+id/bt_stop_service"
        app:layout_constraintStart_toStartOf="@+id/bt_stop_service"
        app:layout_constraintTop_toBottomOf="@+id/bt_stop_service" />

    <Button
        android:id="@+id/bt_unbind_service"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Unbind Service"
        app:layout_constraintEnd_toEndOf="@+id/bt_bind_service"
        app:layout_constraintStart_toStartOf="@+id/bt_bind_service"
        app:layout_constraintTop_toBottomOf="@+id/bt_bind_service" />

    <Button
        android:id="@+id/bt_get_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Get Random Number"
        app:layout_constraintEnd_toEndOf="@+id/bt_unbind_service"
        app:layout_constraintStart_toStartOf="@+id/bt_unbind_service"
        app:layout_constraintTop_toBottomOf="@+id/bt_unbind_service" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/bt_get_number"
        app:layout_constraintStart_toStartOf="@+id/bt_get_number"
        app:layout_constraintTop_toBottomOf="@+id/bt_get_number" />
</androidx.constraintlayout.widget.ConstraintLayout>